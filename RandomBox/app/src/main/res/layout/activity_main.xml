<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_check"
        android:layout_width="176dp"
        android:layout_height="62dp"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="376dp"
        android:text="적립 내역 확인" />

    <Button
        android:id="@+id/btn_start"
        android:layout_width="173dp"
        android:layout_height="82dp"
        android:layout_alignStart="@+id/btn_check"
        android:layout_alignParentTop="true"
        android:layout_marginTop="283dp"
        android:text="시작하기!!" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"

        android:layout_marginStart="84dp"
        android:layout_marginLeft="84dp"
        android:layout_marginTop="203dp"
        android:text="RANDOM BOX!"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#3F51B5"
        android:textSize="36sp" />

    <ImageButton
        android:id="@+id/btn_product"
        android:layout_width="90dp"
        android:layout_height="86dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-1dp"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="-3dp"

        android:scaleType="fitStart"
        android:src="@drawable/prensent"
        tools:src="@drawable/prensent"
        tools:srcCompat="@drawable/prensent" />


    <ImageButton
        android:id="@+id/btn_charge"
        android:layout_width="83dp"
        android:layout_height="97dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:scaleType="centerCrop"
        android:src="@drawable/money"
        tools:srcCompat="@drawable/money" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="95dp"
        android:layout_marginEnd="3dp"
        android:layout_marginRight="3dp"
        android:text="무료충전소"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="89dp"
        android:text="상품 교환소"
        android:textSize="18sp" />


</RelativeLayout>